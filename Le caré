#include <stdio.h>
#include <stdlib.h>

int main()
{
    int lon;//Longeur
    int lar;//Largeur
    int i=1;
    int j=1;

printf("Longueur\n");
    scanf("\n%d",&lon);
printf("largeur\n");
    scanf("\%d",&lar);


for (i=1;i<=lar;i++)
{
    for(j=1;j<=lon;j++)//Double boucle, qui sert de "tableau
    {
        if(i==1||i==lon || j==1 || j==lar)
        {
            printf("-");//Remplissage
        }
            else {
                printf("+");//Contour
            }
    }
return 0;
}
}
